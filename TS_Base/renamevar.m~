function out = renamevar(inpt, var_old, var_new)

% Copy the 
% Check if var_old is used as a dimension
if isfield(inpt.Dimensions, var_old)
    % Copy the size of the dimension to the new variable name
    out.Dimensions.(var_new) = inpt.Dimensions.(var_old);
    % Remove the old variable
    inpt.Dimensions           = rmfield(inpt.Dimensions, var_old);
    
    vars = fieldnames(inpt.Variables);
    
    for i = 1:length(vars)
        var_dims = inpt.Variables.(vars{i}).dimensions;
        var_indx = find(ismember(var_dims, var_old) == 1);
        
        if ~isempty(var_indx)
            var_dims{var_indx} = var_new;
            inpt.Variables.(vars{i}).dimensions = var_dims;
        end
    end         
end

inpt.Variables.(var_new) = inpt.Variables.(var_old);
inpt.Variables           = rmfield(inpt.Variables, var_old);

inpt.Data.(var_new)      = inpt.Data.(var_old);
inpt.Data                = rmfield(inpt.Data, var_old);


